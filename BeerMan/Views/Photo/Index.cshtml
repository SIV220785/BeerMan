@model List<BeerMan.Models.Photo>

<h2>Изображения</h2>

<p>
    @Html.ActionLink("Добавить изображение", "Create", "photo")
</p>

<form method="post" action="Create" >
    <input type="submit" value="Add IMG" />
</form>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <table>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
                    </td>
                </tr>
            </table>
        </div>
    }
</div>







